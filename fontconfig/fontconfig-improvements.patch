+#error C compiler defined STDC_NO_THREADS or STDC_NO_ATOMICS
+#endif
+
+#include <stdio.h>
+#include <threads.h>
+
+int main(void) {
+
+  mtx_t mutex;
+  size_t count = 0;
+
+  mtx_lock(&mutex);
+
+  for (size_t i = 0; i < 1000; i++) {
+    count += i;
+  }
+
+  mtx_unlock(&mutex);
+  mtx_destroy(&mutex);
+
+  printf("%ld\n", count);
+
+  return 0;
+
